{% extends 'base.html.twig' %}

{% block title %}Sondage index{% endblock %}

{% block body %}
    <h1>Sondage index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sondage in sondages %}
            <tr>
                <td>{{ sondage.id }}</td>
                <td>{{ sondage.titre }}</td>
                <td>
                    <a href="{{ path('sondage_show', {'id': sondage.id}) }}">show</a>
                    <a href="{{ path('sondage_edit', {'id': sondage.id}) }}">edit</a>
                </td>
            </tr>
