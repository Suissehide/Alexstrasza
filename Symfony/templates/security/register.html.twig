{% extends 'base.html.twig' %}

{% block title %}Créer un compte{% endblock %}

{% form_theme form _self %}

{% block _utilisateur_username_widget %}
    <div class="has-feedback form-row">
        {{ block('form_widget_simple') }}
        <span class="glyphicon glyphicon-user form-control-feedback"></span>
    </div>
{% endblock %}

{% block password_widget %}
    <div class="has-feedback form-row">
        {% set type = type | default("password") %}
        {{ block('form_widget_simple') }}
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
    </div>
{% endblock %}

{% block body %}
    <div id="starfield"></div>
    <div class="login-wrapper">
        <div class="row">
            <div class="col-md-12 login-header">
                Créer un compte
            </div>
        </div>

        <div class="row login-form">
            <div class="form-signin">
                {{ form_start(form) }}

                {{ form_row(form.username, {'attr': {'autofocus' : true} }) }}
                {{ form_row(form.plainPassword.first) }}
                {{ form_row(form.plainPassword.second) }}

                <div class="submit-btn">
                    <button class="button btn-block" type="submit">Enregistrer</button>
                </div>
                <p>
                    Déjà un compte ?
                    <a href="{{ url('login') }}">{{ 'Se connecter' }}</a>
                </p>
                {{ form_row(form._token) }}
                {{ form_end(form, {'render_rest' : false}) }}
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/starscroll.js') }}"></script>
    <script type="text/javascript">
        $('html').css({'background-image': 'radial-gradient(rgba(96,0,255,.25),rgba(96,0,255,.05))'})
        $('#starfield').html('').starscroll(8, 3, 30, 4, 4, [
            96, 255, 255
        ], true, true, '8-bit');
    </script>
{% endblock %}